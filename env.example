# Echo AI Assistant Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# CORE SETTINGS
# =============================================================================

# API Authentication (REQUIRED)
# Generate a secure token: openssl rand -hex 32
ECHO_API_TOKEN=change-me-to-secure-token

# Data and Web Directories
ECHO_DATA_DIR=./data
ECHO_WEB_DIR=./web

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# AI Model (qwen2.5:latest, qwen2.5:7b, qwen2.5:14b, llama3.2:latest)
ECHO_AI_MODEL=qwen2.5:latest

# Ollama Server URL (REQUIRED for local AI)
OLLAMA_URL=http://localhost:11434

# OpenAI API Key (OPTIONAL - for TTS and Whisper)
OPENAI_API_KEY=

# =============================================================================
# VOICE SETTINGS
# =============================================================================

# Enable voice input
ECHO_VOICE_INPUT_ENABLED=1

# Audio device (default, usb, bluetooth)
ECHO_VOICE_INPUT_DEVICE=default

# Voice input language
ECHO_VOICE_INPUT_LANGUAGE=en

# =============================================================================
# WAKE WORD DETECTION
# =============================================================================

# Enable wake word detection
ECHO_WAKE_WORD_ENABLED=1

# Wake word engine (porcupine, snowboy, vosk)
ECHO_WAKE_WORD_ENGINE=porcupine

# Wake word sensitivity (0.0-1.0)
ECHO_WAKE_WORD_SENSITIVITY=0.5

# Wake word phrase
ECHO_WAKE_WORD_KEYWORD=hey echo

# Audio device for wake word detection
ECHO_WAKE_WORD_DEVICE=default

# Sample rate for wake word detection
ECHO_WAKE_WORD_SAMPLE_RATE=16000

# Porcupine access key (get from https://picovoice.ai/)
PORCUPINE_ACCESS_KEY=demo

# Snowboy model path
SNOWBOY_MODEL_PATH=resources/snowboy_hey_echo.pmdl

# Vosk model path
VOSK_MODEL_PATH=models/vosk-model-small-en-us-0.15

# =============================================================================
# FACE RECOGNITION
# =============================================================================

# Enable face recognition
ECHO_FACE_RECOGNITION_ENABLED=1

# Recognition confidence threshold (0.1-1.0)
ECHO_FACE_RECOGNITION_CONFIDENCE=0.6

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Enable backup system
ECHO_BACKUP_ENABLED=1

# Automatic backup interval (hours)
ECHO_BACKUP_AUTO_INTERVAL_HOURS=24

# Maximum backup size (MB)
ECHO_BACKUP_MAX_SIZE_MB=500

# =============================================================================
# NETWORK SETTINGS
# =============================================================================

# Enable WiFi setup mode
ECHO_WIFI_SETUP_ENABLED=1

# Enable remote access
ECHO_REMOTE_ACCESS_ENABLED=1

# Cloudflare tunnel token (for remote access)
CLOUDFLARE_TUNNEL_TOKEN=

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum concurrent requests
ECHO_MAX_CONCURRENT_REQUESTS=10

# Request timeout (seconds)
ECHO_REQUEST_TIMEOUT=30

# =============================================================================
# CAMERA SETTINGS
# =============================================================================

# Camera devices (JSON format)
# Example: {"head": "/dev/video0", "rear": "/dev/video1"}
CAM_DEVICES={"head": "/dev/video0"}

# Camera resolution
CAM_W=1280
CAM_H=720
CAM_FPS=30

# =============================================================================
# TEXT-TO-SPEECH SETTINGS
# =============================================================================

# TTS Model (for OpenAI)
ECHO_TTS_MODEL=gpt-4o-mini-tts

# TTS Voice (alloy, echo, fable, onyx, nova, shimmer)
ECHO_TTS_VOICE=alloy

# Audio player command
ECHO_AUDIO_PLAYER=aplay

# FFmpeg command
FFMPEG_CMD=ffmpeg

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
ECHO_LOG_LEVEL=INFO

# Metrics cache TTL (seconds)
METRICS_CACHE_TTL=2.0

# Speech queue maximum size
SPEECH_QUEUE_MAX=16

# Event history size
EVENT_HISTORY=100

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Flask settings
FLASK_DEBUG=0
HOST=0.0.0.0
PORT=5000

# Face display settings
ECHO_FACE_FULLSCREEN=1

# Audio settings
ALSA_CARD=0
ALSA_DEVICE=0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (development only)
DEBUG=0

# Enable verbose logging
VERBOSE=0

# Test mode (disables some features)
TEST_MODE=0
