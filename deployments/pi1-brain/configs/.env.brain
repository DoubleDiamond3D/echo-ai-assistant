# Echo AI Assistant - Pi #1 (Brain) Configuration

# Pi Role
ECHO_ROLE=brain

# Network Configuration
ECHO_FACE_PI_URL=http://192.168.1.102:5001
HOST=0.0.0.0
PORT=5000

# API Authentication
ECHO_API_TOKEN=change-me-to-secure-token

# AI Configuration
ECHO_AI_MODEL=qwen2.5:latest
OLLAMA_URL=http://localhost:11434
OPENAI_API_KEY=

# Performance Settings
ECHO_MAX_CONCURRENT_REQUESTS=10
ECHO_REQUEST_TIMEOUT=30

# Data Storage
ECHO_DATA_DIR=/opt/echo-ai/data
ECHO_WEB_DIR=/opt/echo-ai/web

# Services Enabled on Brain Pi
ECHO_WEB_INTERFACE_ENABLED=1
ECHO_AI_SERVICE_ENABLED=1
ECHO_CHAT_LOG_ENABLED=1
ECHO_BACKUP_ENABLED=1

# Services Disabled on Brain Pi (handled by Face Pi)
ECHO_FACE_DISPLAY_ENABLED=0
ECHO_VOICE_INPUT_ENABLED=0
ECHO_WAKE_WORD_ENABLED=0
ECHO_CAMERA_ENABLED=0
ECHO_SPEECH_OUTPUT_ENABLED=0

# TTS Settings (for API responses, not local speech)
ECHO_TTS_MODEL=gpt-4o-mini-tts
ECHO_TTS_VOICE=alloy

# Backup Settings
ECHO_BACKUP_AUTO_INTERVAL_HOURS=24
ECHO_BACKUP_MAX_SIZE_MB=1000

# Network Settings
ECHO_WIFI_SETUP_ENABLED=1
ECHO_REMOTE_ACCESS_ENABLED=1
CLOUDFLARE_TUNNEL_TOKEN=

# Logging
ECHO_LOG_LEVEL=INFO
METRICS_CACHE_TTL=2.0
SPEECH_QUEUE_MAX=16
EVENT_HISTORY=100