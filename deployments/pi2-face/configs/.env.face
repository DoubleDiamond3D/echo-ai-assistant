# Echo AI Assistant - Pi #2 (Face) Configuration

# Pi Role
ECHO_ROLE=face

# Network Configuration
ECHO_BRAIN_PI_URL=http://192.168.1.101:5000
HOST=0.0.0.0
PORT=5001

# API Authentication (same as Brain Pi)
ECHO_API_TOKEN=change-me-to-secure-token

# AI Configuration (points to Brain Pi)
OLLAMA_URL=http://192.168.1.101:11434
ECHO_AI_MODEL=qwen2.5:latest

# Data Storage
ECHO_DATA_DIR=/opt/echo-ai/data

# Services Disabled on Face Pi (handled by Brain Pi)
ECHO_WEB_INTERFACE_ENABLED=0
ECHO_AI_SERVICE_ENABLED=0
ECHO_CHAT_LOG_ENABLED=0
ECHO_BACKUP_ENABLED=0

# Services Enabled on Face Pi
ECHO_FACE_DISPLAY_ENABLED=1
ECHO_VOICE_INPUT_ENABLED=1
ECHO_WAKE_WORD_ENABLED=1
ECHO_CAMERA_ENABLED=1
ECHO_SPEECH_OUTPUT_ENABLED=1

# Display Settings
ECHO_FACE_FULLSCREEN=1
ECHO_FACE_WIDTH=800
ECHO_FACE_HEIGHT=480

# Voice Settings
ECHO_VOICE_INPUT_DEVICE=default
ECHO_VOICE_INPUT_LANGUAGE=en

# Wake Word Detection (pvporcupine)
ECHO_WAKE_WORD_ENGINE=porcupine
ECHO_WAKE_WORD_KEYWORD=hey echo
ECHO_WAKE_WORD_SENSITIVITY=0.5
PORCUPINE_ACCESS_KEY=your-porcupine-api-key-here

# Camera Settings
CAM_W=1280
CAM_H=720
CAM_FPS=30
CAM_DEVICES=head:/dev/video0

# Audio Settings
ECHO_AUDIO_PLAYER=aplay
ECHO_TTS_VOICE=alloy

# Face Recognition
ECHO_FACE_RECOGNITION_ENABLED=1
ECHO_FACE_RECOGNITION_CONFIDENCE=0.6

# Performance Settings
ECHO_MAX_CONCURRENT_REQUESTS=5
ECHO_REQUEST_TIMEOUT=15

# Logging
ECHO_LOG_LEVEL=INFO
PYGAME_HIDE_SUPPORT_PROMPT=1