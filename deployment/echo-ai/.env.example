# Copy to .env and customise for your environment
ECHO_API_TOKEN=change-me
HOST=0.0.0.0
PORT=5000

# Voice synthesis (OpenAI)
OPENAI_API_KEY=
ECHO_TTS_MODEL=gpt-4o-mini-tts
ECHO_TTS_VOICE=alloy

# Optional local model streaming
OLLAMA_URL=

# Audio playback commands (space separated)
ECHO_AUDIO_PLAYER=aplay
FFMPEG_CMD=ffmpeg

# Camera configuration
#CAMERA_DEVICES=head:/dev/video0,front:/dev/video2
CAM_W=1280
CAM_H=720
CAM_FPS=30

# Paths (leave default for Raspberry Pi install script)
#ECHO_DATA_DIR=/opt/echo/data
#ECHO_WEB_DIR=/opt/echo/web

# Logging & internals
ECHO_LOG_LEVEL=INFO
SPEECH_QUEUE_MAX=16
EVENT_HISTORY=100
METRICS_CACHE_TTL=2.0
